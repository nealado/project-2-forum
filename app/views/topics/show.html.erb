<p id="notice"><%= notice %></p>
  <div class="body">
    <div class="post_header">


      <p><h1 id="topic_title"><%= @topic.title %></h1>
        <span id="upvote"><%= pluralize(@topic.upvotes_count, "vote") %>
        <%= button_to '+1', upvote_topic_path(@topic), method: :post %> </span>
      </p>

      <p>Created by <strong><%= @topic.user.first_name %></strong>
          <%= time_ago_in_words(@topic.created_at)%> ago from <%= @location %> </p>
    </div>

    <p class="text_body">
      <img id="avatar" src="<%=@topic.user.avatar_url%>" width=100px/>
      <%= markdown(@topic.content) %>
    </p>

    <hr>

    <h2> Comments </h2>
      <%= render @topic.comments  %>
      <hr>

    <h3> Reply to thread </h3>
      <%= render "comments/form" %>

    <%= link_to 'Edit', edit_topic_path(@topic) %> |
    <%= link_to 'Back', topics_path %>
</div>
